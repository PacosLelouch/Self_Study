<!--pages/UsernameLoginPage/LoginPage.wxml-->
<view class="title">
  <text>登录</text>
</view>
<view class="input-texts">
  <view class="hint">{{inputId.text}}</view>
  <view class="errMsg" wx:if="{{!idValidity}}">{{inputId.notValidMsg}}</view>
  <input type="text" bindinput="inputId"></input>
  <view class="hint">{{inputPassword.text}}</view>
  <view class="errMsg" wx:if="{{!passwordValidity}}">{{inputPassword.notValidMsg}}</view>
  <input type="password" bindinput="inputPassword"></input>
  <picker range="{{inputType.types}}" value="{{type}}" bindchange="inputType">
    <text>选择类型：</text>
    <span class="select">{{inputType.types[type]}}</span>
  </picker>
</view>
<view class="buttons">
  <button class="btn" hover-class="btn-hover" bindtap="login">{{login.text}}</button>
</view>
<view class="errMsg" wx:if="{{!loginValidity}}">{{login.notValidMsg}}</view>