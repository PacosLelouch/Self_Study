    <picker range="{{dates}}" value="{{select}}" bindchange="inputDate">
      <text>选择预约日期：</text>
      <span class="select">{{dates[select]}}</span>
    </picker>
  </view>
  <view class="orders-outer" style="height:{{wHeight - 180}}px;">
    <view class="orders-title">
      <text>当日预约情况\n</text>
      <text class="hint">点击方块进行预约</text>
    </view>
